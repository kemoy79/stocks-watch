<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

  <%@friends.each do |friend|%>
    <tr> 
      <td><%= friend.email%></td>
      <td> <%= link_to  "Unfriend", '#', method: :delete, data: {confirm: "Are you sure?"}, class: "bnt btn-sm btn-danger"%> </td>
    </tr>
  <% end %>
  </tbody>
</table>